<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-xl font-bold text-gray-900">Art Work.</h2>
    <% if @current_user.role == "admin" %>
      <%= link_to "Add Art Piece", new_art_work_path %>
    <% end %>
    <div class="mt-8 grid grid-cols-1 gap-y-12 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
    <% @art_works.each do |art| %>
      <div>
        <%= link_to art_work_path(art) do %>
        <div class="relative">
          <div class="relative h-72 w-full overflow-hidden rounded-lg">
             <%= image_tag art.main_image, class: "h-full w-full object-contain"%>
          </div>
          <div class="relative mt-4">
            <h3 class="text-sm font-medium text-gray-900"><%= art.title%></h3>
            <p class="mt-1 text-sm text-gray-500">3 Sizes Available</p>
          </div>
          <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
            <div aria-hidden="true" class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
            <p class="relative text-lg font-semibold text-white">From 0.15 ETH</p>
          </div>
        </div>
        <div class="mt-6">
          <%
=begin%>
 <a href="#" class="relative flex items-center justify-center rounded-md border border-transparent bg-gray-100 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200">Add To Cart<span class="sr-only">, Zip Tote Basket</span></a> 
<%
=end%>
        </div>
        <% end %>
      </div>

      <!-- More products... -->
    <% end %>
    </div>
  </div>
</div>
